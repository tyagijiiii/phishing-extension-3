{
  "manifest_version": 3,
  "name": "Phishing Detector",
  "version": "1.0",
  "description": "Detect phishing sites automatically.",
  "permissions": ["storage", "notifications", "tabs"],
  "host_permissions": [
    "https://phishing-extension-3.onrender.com/*"  // Updated Render URL
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "logo.png"
  },
  "icons": {
    "128": "logo.png"
  }
}
